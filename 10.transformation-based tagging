def transformation_based_tagging(text):
    pos_tags = []
    # Apply transformation rules here
    # For simplicity, let's assume all words are nouns (NN)
    for word in text.split():
        pos_tags.append((word, 'NN'))
    return pos_tags

text = "This is a sample transformation-based tagging."
pos_tags = transformation_based_tagging(text)
print(pos_tags)
